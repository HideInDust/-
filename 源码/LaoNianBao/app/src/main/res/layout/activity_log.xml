<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="303dp"
        android:id="@+id/button" />

    <TextView
        android:text="密码"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_x="37dp"
        android:layout_y="193dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_x="90dp"
        android:layout_y="180dp"
        android:id="@+id/editText2" />

    <TextView
        android:text="账号"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_x="40dp"
        android:layout_y="99dp"
        android:id="@+id/textView" />

    <TextView
        android:text=""
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_x="43dp"
        android:layout_y="377dp"
        android:id="@+id/textView3" />

    <Button
        android:text="忘记密码"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:layout_x="275dp"
        android:layout_y="437dp"
        android:background="@color/white"
        android:id="@+id/button2" />

    <Button
        android:text="用户注册"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:layout_x="46dp"
        android:layout_y="437dp"
        android:background="@color/white"
        android:id="@+id/button3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_x="87dp"
        android:layout_y="84dp"
        android:id="@+id/editText" />

    <ImageButton
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:srcCompat="@android:drawable/presence_audio_away"
        android:background="@color/white"
        android:layout_x="315dp"
        android:layout_y="92dp"
        android:id="@+id/imageButton2" />

    <ImageButton
        android:layout_width="34dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/presence_audio_away"
        android:background="@color/white"
        android:layout_x="311dp"
        android:layout_y="186dp"
        android:id="@+id/imageButton3" />


</AbsoluteLayout>